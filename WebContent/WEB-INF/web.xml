<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>BigLog</display-name>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>
			com.kennycode.biglogjee.listener.AppContextListener
		</listener-class>
	</listener>

	<filter>
		<filter-name>RequestLoggingFilter</filter-name><!-- mandatory -->
		<filter-class>com.kennycode.biglogjee.servlet.filters.RequestLoggingFilter</filter-class><!-- 
			mandatory -->

		<init-param> <!-- optional -->
			<param-name>test</param-name>
			<param-value>testValue</param-value>
		</init-param>
	</filter>
	
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.kennycode.biglogjee.servlet.filters.AuthenticationFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>RequestLoggingFilter</filter-name><!-- mandatory -->
		<url-pattern>/*</url-pattern><!-- either url-pattern or servlet-name is mandatory -->
		<!-- <servlet-name>LoginServlet</servlet-name> -->
		<!-- OPTIONS: REQUEST, FORWARD, INCLUDE, ERROR and ASYNC.  -->
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<context-param>
		<param-name>dbURL</param-name>
		<param-value>jdbc:mysql://localhost/biglog</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>biglog_user</param-value>
	</context-param>
	<context-param>
		<param-name>dbUserPwd</param-name>
		<param-value>biglog</param-value>
	</context-param>
</web-app>